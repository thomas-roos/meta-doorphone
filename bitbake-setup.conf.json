{
    "version": "1.0",
    "description": "Meta-doorphone SIP doorphone for Raspberry Pi 64",
    "sources": {
        "bitbake": {
            "git-remote": {
                "remotes": {
                    "origin": {
                        "uri": "git://git.openembedded.org/bitbake;protocol=https"
                    }
                },
                "branch": "master",
                "rev": "master"
            },
            "path": "bitbake"
        },
        "openembedded-core": {
            "git-remote": {
                "remotes": {
                    "origin": {
                        "uri": "git://git.openembedded.org/openembedded-core;protocol=https"
                    }
                },
                "branch": "master",
                "rev": "master"
            },
            "path": "layers/openembedded-core"
        },
        "meta-openembedded": {
            "git-remote": {
                "remotes": {
                    "origin": {
                        "uri": "git://git.openembedded.org/meta-openembedded;protocol=https"
                    }
                },
                "branch": "master",
                "rev": "master"
            },
            "path": "layers/meta-openembedded"
        },
        "meta-raspberrypi": {
            "git-remote": {
                "remotes": {
                    "origin": {
                        "uri": "git://git.yoctoproject.org/meta-raspberrypi;protocol=https"
                    }
                },
                "branch": "master",
                "rev": "master"
            },
            "path": "layers/meta-raspberrypi"
        }
    },
    "bitbake-setup": {
        "configurations": [
            {
                "name": "doorphone",
                "description": "SIP doorphone configuration for Raspberry Pi 64",
                "bb-layers": [
                    "openembedded-core/meta",
                    "meta-openembedded/meta-oe",
                    "meta-openembedded/meta-python",
                    "meta-openembedded/meta-multimedia",
                    "meta-raspberrypi"
                ],
                "bb-layers-file-relative": [
                    "."
                ],
                "oe-fragments-one-of": {
                    "machine": {
                        "description": "Target machines",
                        "options": ["machine/raspberrypi4-64"]
                    },
                    "distro": {
                        "description": "Distribution variants",
                        "options": ["distro/poky", "distro/poky-altcfg"]
                    }
                }
            }
        ]
    }
}
